<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Navigation Style -->
    <style name="CustomBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/BoldFontKr</item>
        <item name="itemTextAppearanceActive">@style/BoldFontKr</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="itemIconTint">@color/selector_bottom_nav</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemPaddingTop">22dp</item>
    </style>

    <!-- Button -->
        <!-- Closet (옷장 기능) -->
        <style name="ClosetCategory.ButtonCommon" parent="Widget.Material3.Button">
            <item name="android:textSize">10sp</item>
            <item name="iconPadding">4dp</item>
            <item name="android:textAppearance">@style/MediumFontKr</item>
            <item name="android:includeFontPadding">false</item>
            <item name="android:background">@android:color/transparent</item>
            <item name="android:layout_gravity">center_vertical</item>
        </style>

        <style name="ClosetCategory.UnChecked" parent="ClosetCategory.ButtonCommon">
            <item name="android:textColor">@color/dark1</item>
        </style>

        <style name="ClosetCategory.Checked" parent="ClosetCategory.ButtonCommon">
            <item name="android:textColor">@color/green1</item>
        </style>



</resources>