<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.mypage.MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_dark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="26dp"
                android:background="@drawable/layout_my_page_background">

                <TextView
                    android:id="@+id/my_page_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/my_page_title"
                    android:layout_marginTop="33dp"
                    style="@style/BoldFont.22"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_scrollFlags="scroll"/>

                <!-- 캐릭터 -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/ic_white_100">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mypage_woman"/>

                </FrameLayout>

                <!-- name -->
                <TextView
                    style="@style/RegularFont.14"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/my_info_name"/>

            </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="212dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 환경 지키기 D+day -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingStart="33dp"
                    android:paddingEnd="33dp"
                    android:gravity="center"
                    android:background="@drawable/ic_white_rectangle_90">

                    <TextView
                        style="@style/MediumFont.12"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="19dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="환경 지키기"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="D + "
                            android:textColor="@color/green1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/green1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="일째 되는 날이에요!"
                            android:textColor="@color/dark2"/>

                    </LinearLayout>

                </LinearLayout>

                <android.widget.Button
                    android:id="@+id/myPage_btn_myInfo"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/btn_my_page_round"
                    android:backgroundTint="@color/white"
                    android:drawableTop="@drawable/ic_my_info_30"
                    android:padding="12dp"
                    android:text="@string/my_info_myInfo"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myPage_dDay" />

                <android.widget.Button
                    android:id="@+id/myPage_btn_myFeed"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/btn_my_page_round"
                    android:drawableTop="@drawable/ic_my_feed_30"
                    android:padding="12dp"
                    android:text="@string/my_page_myFeed"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myPage_dDay" />

                <android.widget.Button
                    android:id="@+id/myPage_btn_scrap"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/btn_my_page_round"
                    android:drawableTop="@drawable/ic_scrap_30"
                    android:padding="12dp"
                    android:text="@string/my_page_scrap"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myPage_dDay" />

                <android.widget.Button
                    android:id="@+id/myPage_btn_setting"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/btn_my_page_round"
                    android:drawableTop="@drawable/ic_setting_30"
                    android:padding="12dp"
                    android:text="@string/my_page_setting"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myPage_dDay" />

            </LinearLayout>

            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>