<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.mypage.MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_dark">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_my_page_background"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="13dp"
                android:text="MY PAGE"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/myPage_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:src="@drawable/ic_white_100" />

            <TextView
                android:id="@+id/myInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="name"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/myPage_dDay"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="212dp"
                android:layout_marginEnd="33dp"
                android:background="@drawable/ic_white_rectangle_90"
                android:gravity="center"
                android:text="환경 지키기"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/myPage_btn_myInfo"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ic_white_rectangle_75"
                android:src="@drawable/ic_myinfo_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPage_dDay"
                android:contentDescription="내 정보" />

            <ImageButton
                android:id="@+id/myPage_btn_myFeed"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ic_white_rectangle_75"
                android:src="@drawable/ic_myfeed_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPage_dDay"
                android:contentDescription="내 피드" />

            <ImageButton
                android:id="@+id/myPage_btn_scrap"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ic_white_rectangle_75"
                android:src="@drawable/ic_scrap_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPage_dDay"
                android:contentDescription="스크랩" />

            <ImageButton
                android:id="@+id/myPage_btn_setting"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/ic_white_rectangle_75"
                android:src="@drawable/ic_setting_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myPage_dDay"
                android:contentDescription="설정" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>