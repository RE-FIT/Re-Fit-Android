<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="favToggleState"
            type="Boolean" />

        <variable
            name="communityList"
            type="com.example.refit.data.model.community.CommunityListItemResponse" />

        <variable
            name="vm"
            type="com.example.refit.presentation.community.viewmodel.CommunityViewModel" />

        <variable
            name="vm_search"
            type="com.example.refit.presentation.community.viewmodel.CommunitySearchViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_dark"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_community_item_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@android:color/transparent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_community_item"
                    setImage="@{communityList.imgUrl}"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.RoundedRadius.10"
                    app:strokeColor="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_community_item"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_community_item_list_title"
                                style="@style/BoldFontKr.14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="15"
                                android:text="@{communityList.title}"
                                android:textColor="@color/green1" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_price"
                            style="@style/MediumFont.12"
                            setVisibility="@{communityList.price == 0 ? false : true}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@{communityList.price + `원`}"
                            android:textColor="@color/dark2"
                            android:visibility="visible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_size_txt"
                            style="@style/RegularFontKr.10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:minWidth="45dp"
                            android:text="@string/community_item_text_first"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_size"
                            style="@style/RegularFontKr.10"
                            setTextSize="@{communityList.size}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom"
                            android:textColor="@color/dark2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_method_txt"
                            style="@style/RegularFontKr.10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="45dp"
                            android:text="@string/community_item_text_second"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_method"
                            style="@style/RegularFontKr.10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="@{communityList.deliveryType == 0 ? `직거래` : `택배`}"
                            android:textColor="@color/dark2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_region_txt"
                            style="@style/RegularFontKr.10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="45dp"
                            android:text="@string/community_item_text_third"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_community_item_list_region"
                            style="@style/RegularFontKr.10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:text="@{communityList.address == null ? @string/community_item_region_all : communityList.address}"
                            android:textColor="@color/dark2" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView2"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@{communityList.scrapFlag ? @drawable/ic_community_heart_18 : @drawable/ic_community_blank_heart_18}"
                    android:gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>