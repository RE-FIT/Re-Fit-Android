<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.refit.presentation.findidpassword.viewModel.FindIdPasswordViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_dark"
        android:padding="30dp">

        <TextView
            android:id="@+id/find_password_finish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="PW 찾기"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/green1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/find_password_finish_circle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/ic_find_password_finish_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_password_finish_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/ic_find_password_finish_message"
            app:layout_constraintBottom_toBottomOf="@+id/find_password_finish_circle"
            app:layout_constraintTop_toTopOf="@+id/find_password_finish_circle"
            tools:layout_editor_absoluteX="30dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_password_finish_email"
            style="@style/RegularFont.14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="@{vm.userEmail}"
            android:textColor="@color/green1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_password_finish_circle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_password_text1"
            style="@style/RegularFont.14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="입시 비밀번호 메일이 발송되었습니다."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_password_finish_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/find_password_text2"
            style="@style/RegularFont.14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:text="발송된 임시 비밀번호로 로그인 후\n마이페이지에서 비밀번호 재설정을 부탁드려요:)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/find_password_text1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/find_password_btn"
            style="@style/RegularFont.14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:background="@drawable/btn_my_info_pw"
            android:backgroundTint="@color/green1"
            android:clickable="true"
            android:text="로그인 하러 가기"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/find_password_text2"
            tools:layout_editor_absoluteX="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>